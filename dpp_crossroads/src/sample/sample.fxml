<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="sample.Controller">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <center>
            <GridPane BorderPane.alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <ImageView fx:id="leftImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1" />
                  <ImageView fx:id="upperImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" />
                  <ImageView fx:id="rightImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <ImageView fx:id="lowerImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <ImageView fx:id="middleImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </center>
         <bottom>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="signalFourButton" mnemonicParsing="false" onAction="#signalFourHandler" text="Signal 4" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <Button fx:id="signalThreeButton" mnemonicParsing="false" onAction="#signalThreeHandler" text="Signal 3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <Button fx:id="firstRoadButton" mnemonicParsing="false" onAction="#firstRoadHandler" text="First Road" />
                  <Button fx:id="secondRoadButton" mnemonicParsing="false" onAction="#secondRoadHandler" text="Second Road" GridPane.rowIndex="1" />
                  <Button fx:id="thirdRoadButton" mnemonicParsing="false" onAction="#thirdRoadHandler" text="Third Road" GridPane.rowIndex="2" />
                  <Button fx:id="fourthRoadButton" mnemonicParsing="false" onAction="#fourthRoadHandler" text="Fourth Road" GridPane.rowIndex="3" />
                  <Button fx:id="directionLeftButton" mnemonicParsing="false" onAction="#directionLeftHanlder" text="Left" GridPane.columnIndex="1" />
                  <Button fx:id="directionStraightButton" mnemonicParsing="false" onAction="#directionStraightHandler" text="Straight" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="directionRightButton" mnemonicParsing="false" onAction="#directionRightHandler" text="Right" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="signalOneButton" mnemonicParsing="false" onAction="#signalOneHandler" text="Signal 1" GridPane.columnIndex="2" />
                  <Button fx:id="signalTwoButton" mnemonicParsing="false" onAction="#signalTwoHandler" text="Signal 2" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetHandler" text="Reset" GridPane.columnIndex="3" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </bottom>
      </BorderPane>
   </children>
</GridPane>
